    "semantic-release": "4.3.5",
    "source-map-loader": "0.1.5",
    "ts-helpers": "1.1.2",
    "tslint": "~4.0.0",
    "tslint-loader": "3.3.0",
    "typescript": "2.0.10",
    "webpack": "2.2.0",
    "zone.js": "^0.7.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
